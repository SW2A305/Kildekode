<Window x:Class="McSntt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sundet Administration " Height="600" Width="800" >
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="270"><Run Language="da-dk" Text="Her kan du se alle medlemmerne i klubben:"/></TextBlock>
        <Image HorizontalAlignment="Right" Height="Auto" Margin="0,10,10,0" VerticalAlignment="Top" Width="100">
            <Image.Source>
                <BitmapImage UriSource="Images/SundetLogo.png"/>
            </Image.Source>
        </Image>
        
        <!-- Exit button -->
        <Button Name="ExitButton" Content="Afslut" HorizontalAlignment="Left" Margin="707,539,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_OnClick"/>

        <!-- Grid with members taken from the list given as DataContext in the .cs file -->
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="10,32,115,10" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding FirstName}"       Header="Fornavn"    />
                <DataGridTextColumn Binding="{Binding LastName}"        Header="Efternavn"  />
                <DataGridTextColumn Binding="{Binding Position}"        Header="Position"  />
                <DataGridTextColumn Binding="{Binding DateOfBirth, StringFormat={}\{0:dd/MM/yyyy\}}"      Header="Fødselsdato"  />
                <DataGridTextColumn Binding="{Binding Gender}"          Header="Køn"  />
                <DataGridTextColumn Binding="{Binding Cityname}"        Header="By"  />
                <DataGridTextColumn Binding="{Binding Postcode}"        Header="Post nr."  />
                <DataGridTextColumn Binding="{Binding Adress}"          Header="Addresse"  />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

        <Label Content="Er båden operationel:" HorizontalAlignment="Left" Width="125"  Margin="10,525,0,3"/>
        <RadioButton IsEnabled="False" x:Name="YesRadioButton" Content="Ja" HorizontalAlignment="Left" Margin="131,527,0,0" VerticalAlignment="Top"/>
        <RadioButton IsEnabled="False" x:Name="NoRadioButton" Content="Nej" HorizontalAlignment="Left" Margin="130,547,0,0" VerticalAlignment="Top"/>
    
        <StackPanel Margin="438,188,62,282" Orientation="Horizontal" RenderTransformOrigin="0.5,-0.044">
            <StackPanel>
                <Label Height="30" Content="Planlagt afgang:" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Label Height="30" Content="Planlagt ankomst:" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="0.435,3.777"/>
                <Label Height="30" Content="Faktisk afgang:" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="0.435,3.777"/>
                <Label Height="30" Content="Faktisk ankomst:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.435,3.777"/>
            </StackPanel>
            <StackPanel>
                <userControls:DateTimePicker IsReadOnly="True" x:Name="DateTimePickerPlannedDepature" Width="180" Height="30"/>
                <userControls:DateTimePicker IsReadOnly="True" x:Name="DateTimePickerPlannedArrival" Height="30" Width="Auto"/>
                <userControls:DateTimePicker IsReadOnly="True" x:Name="DateTimePickerActualDeparture" Height="30" Width="Auto"/>
                <userControls:DateTimePicker IsReadOnly="True" x:Name="DateTimePickerActualArrival" Height="30" Width="Auto"/>
            </StackPanel>
        </StackPanel>
        

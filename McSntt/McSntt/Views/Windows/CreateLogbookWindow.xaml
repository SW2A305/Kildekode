<Window x:Class="McSntt.Views.Windows.CreateLogbookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateLogbookWindow" Height="610" Width="784"
        Style="{StaticResource WindowStyle}"
        MaxHeight="610" MaxWidth="784" MinHeight="610" MinWidth="784">
    <Grid>
        <Label Content="Udfyld Logbog" FontSize="23" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="auto" Margin="10,-1,0,0"/>
        <Label HorizontalAlignment="Left" Margin="10,45,0,0"  Content="Du har været ude og sejle. Udfyld venligst logbogen" VerticalAlignment="Top"/>
        <Label Content="Båd:" HorizontalAlignment="Left" Width="99"  Margin="10,89,0,439"/>
        <TextBox IsReadOnly="True" x:Name="BådTextBox" Height="30" Margin="133,89,0,460" HorizontalAlignment="Left" Width="96" />
        <Label Content="Crew:" HorizontalAlignment="Left" Width="100"  Margin="10,130,0,388"/>

        <DataGrid CanUserAddRows="False" IsReadOnly="True" x:Name="CrewDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="133,136,0,0" VerticalAlignment="Top" Height="139" Width="232" MaxHeight="139">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding FirstName}" Header="Fornavn"/>
                <DataGridTextColumn Binding="{Binding LastName}" Header="Efternavn"/>
                <DataGridTextColumn Binding="{Binding Position}" Header="Rank"/>
                <DataGridTextColumn Binding="{Binding MemberId}" Header="ID" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Formål:" HorizontalAlignment="Left" Height="auto" Width="100" Margin="10,290,0,235"/>
        <TextBox x:Name="FormålTextBox" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="69" 
                 Margin="133,291,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="232"/>
        <Label Content="Skadesrapport:" HorizontalAlignment="Left" Width="100" Margin="10,376,0,130"/>
        <TextBox x:Name="SkadesrapportTextBox" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="69" 
                 Margin="133,381,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="232"/>
        <Label Content="Er båden operationel:" HorizontalAlignment="Left" Width="125"  Margin="10,473,0,55"/>
        <RadioButton x:Name="JaRadioButton" Content="Ja" HorizontalAlignment="Left" Margin="131,475,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NejRadioButton" Content="Nej" HorizontalAlignment="Left" Margin="130,495,0,0" VerticalAlignment="Top"/>
        <Label Content="Planlagte afgang/ankomst:&#xD;&#xA;&#xD;&#xA;&#x9;&#x9;Klokken:" HorizontalAlignment="Right" Width="160"  Margin="0,128,235,367"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="549,164,0,0" TextWrapping="Wrap" Text="hh/mm" VerticalAlignment="Top" Width="102"/>
        <Label Content="/" HorizontalAlignment="Left" Margin="651,126,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="668,164,0,0" TextWrapping="Wrap" Text="hh/mm" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.855,0.462"/>
        <DatePicker HorizontalAlignment="Left" Margin="668,133,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="549,132,0,0" VerticalAlignment="Top"/>
        <Label Content="Faktiske afgang/ankomst:&#xA;&#xA;&#x9;&#x9;Klokken:" HorizontalAlignment="Right" Width="160"  Margin="0,207,235,288"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="549,243,0,0" TextWrapping="Wrap" Text="hh/mm" VerticalAlignment="Top" Width="102"/>
        <Label Content="/" HorizontalAlignment="Left" Margin="651,205,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="668,243,0,0" TextWrapping="Wrap" Text="hh/mm" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.855,0.462"/>
        <DatePicker HorizontalAlignment="Left" Margin="668,212,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="549,211,0,0" VerticalAlignment="Top"/>
        <Button Content="Ændre Besætning" HorizontalAlignment="Left" Margin="10,186,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click" Height="27"/>
        <Button Content="Udfør" HorizontalAlignment="Left" Margin="673,545,0,0" VerticalAlignment="Top" Width="93" Height="24"/>
    </Grid>
</Window>

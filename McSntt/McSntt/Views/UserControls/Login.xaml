<UserControl x:Class="McSntt.Views.UserControls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid VerticalAlignment="Top">
        <StackPanel HorizontalAlignment="Left" Width="305" x:Name="LoginBox" >
            <TextBlock TextWrapping="Wrap"><Run Language="da-dk" Text="Brugernavn:"/></TextBlock>
            <TextBox x:Name="UsernameBox"  Height="23" TextWrapping="Wrap" Text="" KeyDown="OnKeyDownHandler"/>
            <TextBlock TextWrapping="Wrap"><Run Language="da-dk" Text="Kodeord:"/></TextBlock>
            <PasswordBox x:Name="PasswordBox" Height="23" KeyDown="OnKeyDownHandler" />
            <Button Content="Login" Click="DoLogin"/>
            <Button Content="Login som gæst" Click="DoLogin"/>
            <Button Content="Glemt adgangskode" />
            <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>

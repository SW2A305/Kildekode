<UserControl x:Class="McSntt.Views.UserControls.studyTeacher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="985
             ">
    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="515" Margin="408,153,0,0" VerticalAlignment="Top" Width="551"/>

        <Grid x:Name="editTeamGrid" HorizontalAlignment="Left" Height="504" Margin="483,136,0,0" VerticalAlignment="Top" Width="502">
            <Button x:Name="newTeam" Content="Nyt hold" HorizontalAlignment="Left" Margin="-59,29,0,0" VerticalAlignment="Top" Width="75" Click="newTeam_Click"/>
            <Button x:Name="deleteTeam" Content="Slet hold" HorizontalAlignment="Left" Margin="33,29,0,0" VerticalAlignment="Top" Width="75"/>
            <RadioButton x:Name="level1" Content="1. års sejlere" HorizontalAlignment="Left" Margin="139,29,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="level2" Content="2. års sejlere" HorizontalAlignment="Left" Margin="139,45,0,0" VerticalAlignment="Top"/>
            <StackPanel DataContext="{Binding ElementName=UI}" Margin="-59,83,373,52">
                <Label Height="37" FontSize="16" Content="Elever" />
                <TextBox x:Name="memberSearch" Text="{Binding FilterString, UpdateSourceTrigger=PropertyChanged}"  />
                <DataGrid ItemsSource="{Binding DataGridCollection}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding FirstName}"       Header="Fornavn" />
                        <DataGridTextColumn Binding="{Binding LastName}"        Header="Efternavn" />
                        <DataGridTextColumn Binding="{Binding MemberId}"        Header="Memberid" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="310" Margin="222,141,0,0" VerticalAlignment="Top" Width="187">
                <DataGrid ItemsSource="{Binding DataGridCollection}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,2,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding FirstName}"       Header="Fornavn" />
                        <DataGridTextColumn Binding="{Binding LastName}"        Header="Efternavn" />
                        <DataGridTextColumn Binding="{Binding MemberId}"        Header="Memberid" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <Label Content="Holdmedlemmer&#xA;" HorizontalAlignment="Left" Margin="222,110,0,0" VerticalAlignment="Top" Width="187" FontSize="14" Height="31"/>
            <Button x:Name="addStudent" Content="Tilføj" HorizontalAlignment="Left" Margin="139,212,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="removeStudent" Content="Fjern" HorizontalAlignment="Left" Margin="139,251,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="saveChanges" Content="Gem ændringer" HorizontalAlignment="Left" Margin="305,476,0,0" VerticalAlignment="Top" Width="104" Click="saveChanges_Click"/>
            <Label Content="Holdnavn:" HorizontalAlignment="Left" Height="29" Margin="136,79,0,0" VerticalAlignment="Top" Width="78" FontSize="14"/>
            <TextBox x:Name="teamName" HorizontalAlignment="Left" Height="25" Margin="222,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174"/>

        </Grid>

        <ComboBox x:Name="teamDropdown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,10,0,0"/>
        <ComboBox x:Name="studentDropdown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="151,10,0,0"/>
        <Button x:Name="extraBook" Content="Ekstra lektion" HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" Margin="288,10,0,0"/>
        <CheckBox x:Name="theoryCheck1" Content="Tovværksarbejde" HorizontalAlignment="Left" Margin="26,113,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="theoryCheck2" Content="Navigation" HorizontalAlignment="Left" Margin="26,153,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="theoryCheck3" Content="Motor og brændlære" HorizontalAlignment="Left" Margin="26,191,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="practicalCheck1" Content="Drabant sejlads" HorizontalAlignment="Left" Margin="26,323,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="practicalCheck3" Content="Natsejlads" HorizontalAlignment="Left" Margin="26,399,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="practicalCheck2" Content="Gaffelrigger sejlads" HorizontalAlignment="Left" Margin="26,362,0,0" VerticalAlignment="Top"/>
        <Label Content="Teori" HorizontalAlignment="Left" Height="44" Margin="26,69,0,0" VerticalAlignment="Top" Width="166" FontSize="16"/>
        <Label Content="Praktisk" HorizontalAlignment="Left" Margin="26,272,0,0" VerticalAlignment="Top" FontSize="16"/>
        <CheckBox x:Name="editTeam" Content="Redigér hold" HorizontalAlignment="Left" Margin="423,116,0,0" VerticalAlignment="Top" Checked="editTeam_Checked" Unchecked="editTeam_Unchecked"/>
        

    </Grid>
</UserControl>

<UserControl 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="McSntt.Views.UserControls.Boats"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="500">
            <ComboBox x:Name="BoatComboBox" HorizontalAlignment="Left" ItemsSource="{Binding BoatsCollection}" Width="250" DropDownClosed="BoatComboBox_OnDropDownClosed"/>
            <Label Content="Du har valgt båd:"/>
            <TextBlock FontSize="16" Text="Ingen er valgt." x:Name="NameBlock" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
